<%= html_tag do -%>

  <%= head_tag do -%>
  	<title>[小槌] ホーム</title>
	<%= yield :head %>
  <% end -%>
  
  <%= body_tag do -%>
    <div id="header" style="margin-bottom: 2em;">
      <div id="home_icon">
        <%= link_to(image_tag("izumo_kozuchi.png", :border => 0, :width => 32, :height => 32), root_path) %>
      </div>
      <div id="header_title">
        <span class="large"><%= h current_user.login %>さんの家計簿</span>
        <span> - ホーム</span>
      </div>
      <%= render :partial => "shared/menu_groups" %>
      <div style="clear: right;"></div>
    </div>

    <%= yield %>
  <% end -%>

<% end -%>